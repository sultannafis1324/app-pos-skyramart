{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        
        "dev": "concurrently \"npm:vite\" \"npm:serve\" \"npm:schedule\" --names \"VITE,SERVER,SCHEDULE\" --prefix-colors \"blue,green,yellow\"",
        
        "dev:full": "concurrently \"npm:vite\" \"npm:serve\" \"npm:schedule\" \"npm:queue\" --names \"VITE,SERVER,SCHEDULE,QUEUE\" --prefix-colors \"blue,green,yellow,magenta\"",
        
        "dev:simple": "concurrently \"npm:vite\" \"npm:serve\" --names \"VITE,SERVER\" --prefix-colors \"blue,green\"",
        
        "vite": "vite",
        "serve": "php artisan serve",
        "schedule": "php artisan schedule:work",
        "queue": "php artisan queue:work"
    },
    
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^7.0.4"
    }
    
}